<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >

    <TextView
        android:id="@+id/navigation_bar_item_active_indicator_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRARSE"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@color/design_default_color_secondary"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese el nombre de usuario a registrar"
        android:layout_below="@id/navigation_bar_item_active_indicator_view"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"

        />

    <EditText
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"

        android:layout_below="@id/navigation_bar_item_active_indicator_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="12"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese su contraseña"
        android:layout_below="@id/user"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@id/user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="12"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repita su contraseña"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        />
    <EditText
        android:id="@+id/rpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="12"

        />
    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rpassword"
        android:onClick="btnRegister"
        android:layout_marginTop="15dp"

    />
</RelativeLayout>
